@model EstoqueLab.UI.Models.Produto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar Produto</h1>
<a class="btn btn-sm btn-dark justify-content-end" style="float:right; margin:5px;" href="/Produto" role="button">
    <i class="fa-solid fa-list-check"></i> Produtos
</a>

<div class="row" style="padding-top: 50px;">
    @using (Html.BeginForm("Create", "Produto", FormMethod.Post, new { enctype = "multpart/form-data", @role = "form" }))
    {
        <div class="row justify-content-between text-left">
            <div class="form-group flex-column d-flex">
                <label class="form-control-label">Nome<span class="text-danger"> *</span></label>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", id = "nome", @required = "required", placeholder = "Nome" } })
            </div>
        </div>
        <div class="row justify-content-between text-left">
            <div class="form-group flex-column d-flex">
                <label class="form-control-label">Valor<span class="text-danger"> *</span></label>
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", id = "valor", name="valor", @required = "required", placeholder = "Valor" } })
            </div>
        </div>
        <div class="form-group flex-column d-flex">
            <label class="form-control-label">Cliente<span class="text-danger"> *</span></label>
            @Html.DropDownList("CategoriaKey", new SelectList(ViewBag.lstCategorias, "Key", "Nome"), "Selecione uma Categoria", new { @class = "form-control", id = "CategoriaKey", @required = "required" })
        </div>
        <div style="margin-top:30px;">
            <button type="submit" class="submit-btn btn-block btn-success">
                <i class="fa-solid fa-floppy-disk"></i> Salvar
            </button>
        </div>
    }
</div>

@section Scripts{
    <script>
        $(function () {
            $('#valor').maskMoney();
        })
    </script>
}